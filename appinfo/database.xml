<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	 <name>*dbname*</name>
	 <create>true</create>
	 <overwrite>false</overwrite>
	 <charset>latin1</charset>
	 <table>
		<name>*dbprefix*metadata</name>
		<declaration>
			<field>
				<name>item</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>1024</length>
			</field>
			<field>
				<name>namespace</name>
				<type>text</type>
                                <default>'meta'</default>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>key</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>128</length>
			</field>
			<field>
				<name>value</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>1024</length>
			</field>			
		</declaration>
	</table>
</database>
